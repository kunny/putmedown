<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidhuman.putmedown"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />
    <uses-feature android:required="false" android:name="android.hardware.nfc"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".activity.MainPreferenceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /><category android:name="android.intent.category.LAUNCHER"/>
                
            </intent-filter>
        </activity>
        <activity android:name=".activity.DetailedConfigurationActivity"></activity>
        <service android:name=".service.ProtectionService"></service>
    </application>

</manifest>