<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:enabled="false"
        android:key="enabled"
        android:title="@string/enable_protection" />

    <ListPreference
        android:entries="@array/unlock_method_titles"
        android:entryValues="@array/unlock_method_values"
        android:key="unlock_method"
        android:title="@string/unlock_method" />

    <PreferenceScreen android:title="@string/configure_protection" >
        <intent
            android:targetClass="com.androidhuman.putmedown.activity.DetailedConfigurationActivity"
            android:targetPackage="com.androidhuman.putmedown" />
    </PreferenceScreen>

</PreferenceScreen>